<h1>All Posts</h1>

<% if @posts.any? %>
  <ul>
    <% @posts.each do |post| %>
      <li>
        <%= link_to post.title, posts_path(post) %> <!-- Link to show individual post -->
        <p><%= post.body.truncate(100) %></p> <!-- Display a truncated version of the post content -->
        <% if user_signed_in? %> 
            <p><%=post.user.name%></p>
         <% end %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No posts available.</p>
<% end %>

<%= link_to 'New Post', new_post_path %> <!-- Link to the new post form -->
<br>
<% if user_signed_in? %>
  <%= button_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'btn btn-danger' %>
<% end %>
<% unless user_signed_in? %>
  <%= link_to 'Sign In/Up', new_user_registration_path, class: 'btn btn-primary' %>
<% end %>